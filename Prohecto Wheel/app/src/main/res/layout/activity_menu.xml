<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/luzSemaforo1"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/semaforo_negro" />

    <ImageView
        android:id="@+id/luzSemaforo2"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/luzSemaforo1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/semaforo_negro" />

    <ImageView
        android:id="@+id/luzSemaforo3"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/luzSemaforo2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/semaforo_negro" />

    <ImageView
        android:id="@+id/luzSemaforo4"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/luzSemaforo3"
        app:srcCompat="@drawable/semaforo_negro" />

    <ImageView
        android:id="@+id/luzSemaforo5"
        android:layout_width="60dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/luzSemaforo4"
        app:srcCompat="@drawable/semaforo_negro" />

    <TextView
        android:id="@+id/tvCronometro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:text="0.000"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
